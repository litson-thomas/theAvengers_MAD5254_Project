<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/review_item_wrapper"
  android:background="@drawable/shovler_style"
  android:layout_marginBottom="20dp"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <LinearLayout
    android:id="@+id/rating_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/shovler_style"
    tools:ignore="MissingConstraints">

    <LinearLayout
      android:id="@+id/rating_title_details"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="top"
      android:weightSum="3"
      android:background="@drawable/shovler_style"
      tools:ignore="MissingConstraints">

      <LinearLayout
        android:id="@+id/review_title_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginRight="5dp"
        tools:ignore="MissingConstraints">

        <TextView
          android:id="@+id/review_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="@font/poppins_semibold"
          android:textSize="16dp"
          android:textColor="@color/text_black"
          android:maxLines="2"
          android:text="Did a great job this time. Highly recommended!" />

        <TextView
          android:id="@+id/review_subtitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="@font/poppins"
          android:textSize="12dp"
          android:textColor="@color/text_grey"
          android:text="22 March, 2022" />

      </LinearLayout>

      <LinearLayout
        android:id="@+id/review_rating_wrapper"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:gravity="end"
        android:background="@drawable/shovler_style"
        tools:ignore="MissingConstraints">

        <ImageView
          android:id="@+id/review_rating_icon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_star"/>

        <TextView
          android:id="@+id/review_rating"
          android:layout_marginTop="2dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/poppins_semibold"
          android:textSize="16dp"
          android:textAlignment="textEnd"
          android:textColor="@color/primary"
          android:text="4.3" />

      </LinearLayout>

    </LinearLayout>

    <TextView
      android:id="@+id/review_desc"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:maxLines="5"
      android:fontFamily="@font/poppins"
      android:layout_marginTop="15dp"
      android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Justo, donec fermentum dictum arcu lectus. A quam pellentesque suspendisse ornare id. Quis bibendum gravida eros aenean vitae imperdiet dolor. Eget et curabitur duis tempus nullam sed. Augue dictum pretium adipiscing hendrerit. Dictum fames risus arcu egestas purus cras leo sit. Rhoncus elementum lacus, duis tortor, pellentesque gravida proin et."/>

  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
