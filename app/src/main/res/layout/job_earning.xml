<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/job_earning_wrapper"
  android:background="@drawable/shovler_style"
  android:layout_marginBottom="20dp"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <LinearLayout
    android:id="@+id/rating_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@drawable/shovler_style"
    tools:ignore="MissingConstraints">

  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      tools:ignore="MissingConstraints">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_weight="1"
      tools:ignore="MissingConstraints">

      <TextView
            android:id="@+id/job_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="0dp"
            android:textSize="16dp"
            android:textColor="@color/primary"
            android:text="ORDER #221"/>

      <TextView
            android:id="@+id/job_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="14dp"
            android:padding="0dp"
            android:textAlignment="viewStart"
            android:gravity="left"
            android:textAllCaps="false"
            android:textColor="@color/text_black"
            android:text="I will remove snow for you!" />

   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="8"
        tools:ignore="MissingConstraints">
      <TextView
          android:id="@+id/job_earning"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:fontFamily="@font/poppins_semibold"
          android:textSize="16dp"
          android:padding="0dp"
          android:textAlignment="viewStart"
          android:gravity="right"
          android:layout_gravity="right"
          android:inputType="number"
          android:textAllCaps="true"
          android:textColor="@color/text_black"
          android:text="$65" />
    </LinearLayout>

  </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_grey"/>
  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
