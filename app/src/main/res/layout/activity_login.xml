<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.theavengers_mad5254_project.viewmodel.FirebaseViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_wrapper"
    android:padding="30dp"
    tools:context=".views.auth.Login">

    <LinearLayout
      android:id="@+id/heading_wrapper"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      tools:ignore="MissingConstraints">

      <TextView
        android:id="@+id/login_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_extrabold"
        android:textSize="18dp"
        android:lineHeight="35dp"
        android:textColor="@color/text_black"
        android:text="Hey, \nWelcome back" />

      <TextView
        android:id="@+id/login_create_account"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:textSize="12dp"
        android:textColor="@color/text_grey"
        android:text="Are you new here? Create Account" />

      <EditText
        android:id="@+id/login_email"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/input_style"
        android:fontFamily="@font/poppins"
        android:hint="Enter Email"
        android:paddingLeft="20dp"
        android:textSize="12dp" />

      <EditText
        android:id="@+id/login_password"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/input_style"
        android:fontFamily="@font/poppins"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textSize="12dp" />

      <TextView
        android:id="@+id/login_terms_conditions"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:textSize="12dp"
        android:textColor="@color/text_grey"
        android:lineHeight="20dp"
        android:text="By Signing in, you agree to our terms and conditions and privacy policy" />

      <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:background="@drawable/primary_button"
        android:elevation="50dp"
        android:text="Login"
        android:textSize="12dp"
        android:backgroundTint="@color/primary"
        android:layout_marginTop="15dp"
        android:textColor="@color/white" />

      <TextView
        android:id="@+id/login_forgot_password"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:textSize="12dp"
        android:textAlignment="center"
        android:textColor="@color/text_grey"
        android:text="Forgot Password?" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
