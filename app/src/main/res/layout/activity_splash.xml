<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:background="@color/primary"
      android:orientation="vertical"
      android:gravity="center"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <ImageView
        android:src="@drawable/gosnow_light"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

      <TextView
        android:text="GoSnow"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:textColor="@color/text_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    </LinearLayout>

    <ProgressBar
      app:layout_constraintBottom_toBottomOf="@id/wrapper"
      app:layout_constraintLeft_toLeftOf="@id/wrapper"
      app:layout_constraintRight_toRightOf="@id/wrapper"
      android:layout_marginBottom="50dp"
      android:indeterminateTint="@color/text_white"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
