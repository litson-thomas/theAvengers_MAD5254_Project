<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

  <data>
    <variable
        name="viewModel"
        type="com.example.theavengers_mad5254_project.viewmodel.FirebaseViewModel" />
  </data>
<androidx.constraintlayout.widget.ConstraintLayout
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:id="@+id/reset_wrapper"
  android:padding="30dp"
  tools:context=".views.auth.Reset">

  <LinearLayout
    android:id="@+id/heading_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingConstraints">

    <TextView
      android:id="@+id/reset_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fontFamily="@font/poppins_extrabold"
      android:textSize="18dp"
      android:lineHeight="35dp"
      android:textColor="@color/text_black"
      android:text="Hey, \nForgot Password?" />

    <TextView
      android:id="@+id/reset_subtitle"
      android:layout_marginTop="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fontFamily="@font/poppins"
      android:textSize="12dp"
      android:textColor="@color/text_grey"
      android:text="Are you new here? Create Account" />

    <EditText
      android:id="@+id/reset_email"
      android:layout_marginTop="15dp"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="@drawable/input_style"
      android:fontFamily="@font/poppins"
      android:hint="Enter Email"
      android:paddingLeft="20dp"
      android:textSize="12dp" />

    <Button
      android:id="@+id/reset_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="0dp"
      android:background="@drawable/primary_button"
      android:elevation="50dp"
      style="?android:attr/borderlessButtonStyle"
      android:text="Reset"
      android:textSize="12dp"
      android:backgroundTint="@color/primary"
      android:layout_marginTop="15dp"
      android:textColor="@color/white" />

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone"/>

  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>