<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

  <data>
    <variable
        name="viewModelRegister"
        type="com.example.theavengers_mad5254_project.viewmodel.RegisterViewModel" />


  </data>

<androidx.constraintlayout.widget.ConstraintLayout
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:id="@+id/register_wrapper"
  android:padding="30dp"
  tools:context=".views.auth.Register">

  <LinearLayout
    android:id="@+id/heading_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingConstraints">

    <TextView
      android:id="@+id/register_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fontFamily="@font/poppins_extrabold"
      android:textSize="18dp"
      android:lineHeight="35dp"
      android:textColor="@color/text_black"
      android:text="Hey, \nLet's Get Started!" />

    <TextView
      android:id="@+id/register_subtitle"
      android:layout_marginTop="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fontFamily="@font/poppins"
      android:textSize="12dp"
      android:textColor="@color/text_grey"
      android:text="Existing user? Login" />

    <EditText
      android:id="@+id/register_name"
      android:layout_marginTop="15dp"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="@drawable/input_style"
      android:fontFamily="@font/poppins"
      android:hint="Enter Name"
        android:inputType="text"
      android:paddingLeft="20dp"
      android:textSize="12dp" />

    <EditText
      android:id="@+id/register_email"
      android:layout_marginTop="15dp"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="@drawable/input_style"
      android:fontFamily="@font/poppins"
      android:hint="Enter Email"
        android:inputType="textEmailAddress"
      android:paddingLeft="20dp"
      android:textSize="12dp" />

    <EditText
      android:id="@+id/register_phone"
      android:layout_marginTop="15dp"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="@drawable/input_style"
      android:fontFamily="@font/poppins"
      android:hint="Enter Phone Number"
        android:maxLength="10"
        android:inputType="phone"
      android:paddingLeft="20dp"
      android:textSize="12dp" />

    <EditText
      android:id="@+id/regsiter_place"
      android:layout_marginTop="15dp"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="@drawable/input_style"
      android:fontFamily="@font/poppins"
      android:hint="Enter Place"
        android:inputType="text"
      android:paddingLeft="20dp"
      android:textSize="12dp" />

    <EditText
      android:id="@+id/register_password"
      android:layout_marginTop="15dp"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="@drawable/input_style"
      android:fontFamily="@font/poppins"
      android:hint="Enter Password"
      android:inputType="textPassword"
      android:paddingLeft="20dp"
      android:textSize="12dp" />

    <TextView
      android:id="@+id/login_terms_conditions"
      android:layout_marginTop="14dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fontFamily="@font/poppins"
      android:textSize="12dp"
      android:textColor="@color/text_grey"
      android:lineHeight="20dp"
      android:text="By registering, you agree to our terms and conditions and privacy policy" />

    <Button
      android:id="@+id/register_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="0dp"
      android:background="@drawable/primary_button"
      android:elevation="50dp"
      style="?android:attr/borderlessButtonStyle"
      android:text="Register"
      android:textSize="12dp"
      android:backgroundTint="@color/primary"
      android:layout_marginTop="15dp"
      android:textColor="@color/white" />

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone"/>
  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
