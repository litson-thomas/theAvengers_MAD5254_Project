<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/review_item_wrapper"
  android:background="@drawable/shovler_style"
  android:layout_marginBottom="10dp"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <LinearLayout
    android:id="@+id/rating_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/shovler_style"
    tools:ignore="MissingConstraints">


    <TextView
      android:id="@+id/job_description"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="16dp"
      android:fontFamily="@font/poppins_semibold"
      android:textColor="@color/text_black"
      android:text="I will remove snow"/>
    <TextView
        android:id="@+id/job_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="0dp"
        android:textSize="14dp"
        android:textColor="@color/primary"
        android:text="ORDER #221"/>

    <TextView
        android:id="@+id/job_status"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="12dp"
        android:padding="5dp"
        android:background="@drawable/job_status_style"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_gravity="left"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:text="Completed" />

  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
